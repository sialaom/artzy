// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  phone     String   // Format tunisien +216
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  addresses Address[]
  orders    Order[]
  favorites Favorite[]
  giftCards GiftCard[]
}

model Address {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label       String   // Maison, Bureau, etc.
  firstName   String
  lastName    String
  phone       String
  governorate String   // Gouvernorat tunisien
  city        String   // Ville tunisienne
  street      String
  postalCode  String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orders Order[]
}

model Product {
  id                String   @id @default(cuid())
  name              String
  description       String   @db.Text
  price             Float    // En TND (prix actuel)
  originalPrice     Float?   // Prix avant promotion (optionnel)
  categoryId        String
  category          Category @relation(fields: [categoryId], references: [id])
  isCustomizable    Boolean  @default(false)
  customizationOptions Json? // {colors: [], maxTextLength: 100, allowImageUpload: false}
  images            String[] // URLs Cloudinary
  stock             Int      @default(0)
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  orderItems OrderItem[]
  favorites  Favorite[]
}

model Order {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  items           OrderItem[]
  total           Float       // TND
  subtotal        Float       // TND
  shippingCost    Float       // TND
  giftWrapCost    Float       @default(0) // TND
  status          OrderStatus @default(PENDING)
  shippingAddressId String
  shippingAddress Address     @relation(fields: [shippingAddressId], references: [id])
  customizations  Json?       // Sauvegarde personnalisations
  stripePaymentIntentId String? @unique
  trackingNumber  String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  quantity    Int
  price       Float    // Prix au moment de la commande (TND)
  customization Json?  // Personnalisation spécifique à cet item
  createdAt   DateTime @default(now())
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, productId])
}

model GiftCard {
  id          String   @id @default(cuid())
  code        String   @unique
  amount      Float    // TND
  balance     Float    // Solde restant
  userId      String?  // Utilisateur qui a acheté la carte
  user        User?    @relation(fields: [userId], references: [id])
  recipientEmail String?
  message     String?
  isUsed      Boolean  @default(false)
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
